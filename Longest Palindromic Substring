class Solution(object):
    def longestPalindrome(self, s):
        """
        :type s: str
        :rtype: str
        """
        max_lenght = 0
        longest = ""
        for i in range(len(s)):
            for j in range(i,len(s)):
                substring = s[i:j+1]
                if substring == substring[::-1]:
                    if len(substring) > max_lenght:
                        max_lenght = len(substring)
                        longest = substring
        return longest
