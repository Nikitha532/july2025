class Solution(object):
    def isPowerOfTwo(self, n):
        """
        :type n: int
        :rtype: bool
        """
        '''if (n == 0):
            return False
        n = n & (n-1)
        if n == 0:
            return True
        else :
            return False'''

        
        if n <= 0:
            return False
        while (n % 2 == 0):
            n = n//2
        return n ==1
